<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
<div class="form-group">
  <label for="inputtitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"タイトル", class:"form-control"%>
</div>
<div class="form-group">
  <label for="inputopinion">Title</label>
  <%= f.text_field :body, autofocus: true, id:"inputopinion", placeholder:"Opinion", class:"form-control"%>
</div>
<div>
  <%= f.submit "Update Book", class:"btn btn-success" %>
</div>
  <p><%= link_to "Show", book_path( @book.id ) %> | <%= link_to "Back", books_path  %></p>
<% end %>
</div>
</div>
</div>