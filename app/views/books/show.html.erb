

<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3 profile-container">
  <h2>User info</h2>
   <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
   <table class="table">
     <tbody>
       <tr>
       <th>name</th>
       <th><%= @book.user.name %></th>
       </tr>
       <tr>
         <th>introduction</th>
         <th><%= @book.user.introduction %></th>
       </tr>
  </tbody>
  </table>
  <div class="row">
  <%= link_to "編集ボタン", user_path( current_user.id ), class:"btn btn-outline-secondary btn-block" %>
  </div>


<h2>New Book</h1>
<%= form_with url: books_path, local:true, scope: :book do |f| %>
  <div class="form-group">
    <label>Title</label>
  <%= f.text_field :title, class:"form-control book_title" %>
  </div>
  <div class="form-group">
  <label>opinion</label>
  <%= f.text_area :body, class:"form-control book_body"%>
  </div>
  <div class="form-group">
  <%= f.submit 'create', class:"btn btn-success" %>
  </div>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
<table class="table table-hover table-inverse" style="table-layout: fixed;">
  <tbody>
    <tr>
      <td><%= link_to user_path( @book.user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "cat.jpg" %><p><%= @book.user.name %></p><% end %><!--なんでこれで表示されるのか分からない--></td><!--なんでこれでuser_idに合ったnameを取れるのか-->
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
  <% if current_user.id == @book.user.id %><!--もし今のuser_idとbookカラム（userと連携している）のuer_idか同じならば-->
  <p><%= link_to "edit", edit_book_path( @book.id ) %></p>
  </td>
  <td>
  <p><%= link_to "destroy", book_path( @book.id ), method: :delete, data: { confirm: '削除しますか？' } %></p>
  <% end %>
  </td>
    </tr>
  </tbody>
  </table>
</div>
</div>
</div>